<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#000000" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/lblSettingData" android:layout_width="0dp" android:layout_height="wrap_content" android:text="" android:layout_weight="1"/>
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/lblBusy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/busy"/>
        <ImageView android:id="@+id/imgBusy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:src="@drawable/idle" android:contentDescription="@string/busy"/>
    </LinearLayout>
    <ImageView android:id="@+id/imgVolt" android:layout_width="match_parent" android:layout_height="200dp" android:layout_margin="5dp" android:src="@drawable/gauge2" android:scaleType="fitCenter" android:maxHeight="240dp" android:layout_weight="0.31" android:layout_alignTop="@+id/linearLayout1" android:layout_alignRight="@+id/linearLayout1" android:contentDescription="@string/busy"/>
    <TextView android:textSize="25sp" android:textColor="@color/green" android:gravity="center" android:id="@+id/lblVolt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="1dp" android:layout_alignLeft="@+id/linearLayout1" android:layout_alignTop="@+id/imgVolt" android:layout_alignRight="@+id/imgVolt"/>
    <Button android:textSize="25sp" android:textColor="#ffffff" android:id="@+id/btn_Gauge" android:background="#ff8f19" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="200dp" android:minHeight="60dp" android:text="@string/gauge" android:layout_below="@+id/imgVolt" android:layout_centerHorizontal="true" android:onClick="btnGaugeClick"/>
    <Button android:textSize="25sp" android:textColor="#ffffff" android:id="@+id/btn_Map" android:background="#ff8f19" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:minWidth="200dp" android:minHeight="60dp" android:text="@string/map" android:layout_below="@+id/btn_Gauge" android:layout_alignLeft="@+id/btn_Gauge" android:onClick="btnMapClick"/>
    <Button android:textSize="25sp" android:textColor="#ffffff" android:id="@+id/btn_Log" android:background="#ff8f19" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:minWidth="200dp" android:minHeight="60dp" android:text="@string/log" android:layout_below="@+id/btn_Map" android:layout_alignLeft="@+id/btn_Map" android:onClick="btnLogClick"/>
    <Button android:textSize="25sp" android:textColor="#ffffff" android:id="@+id/btn_SystemSet" android:background="#ff8f19" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:minWidth="200dp" android:minHeight="60dp" android:text="@string/system_set" android:layout_below="@+id/btn_Log" android:layout_alignLeft="@+id/btn_Log" android:onClick="btnSystemSetClick"/>
</RelativeLayout>
