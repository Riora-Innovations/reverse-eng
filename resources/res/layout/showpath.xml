<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <HorizontalScrollView android:id="@+id/hscr1" android:scrollbars="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/btnPathLog" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Path Log"/>
            <Button android:id="@+id/btnBack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Back"/>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView android:textSize="25sp" android:id="@+id/showgeo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
    <fragment android:id="@+id/map" android:layout_width="match_parent" android:layout_height="match_parent" class="com.google.android.gms.maps.SupportMapFragment"/>
</LinearLayout>
