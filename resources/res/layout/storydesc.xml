<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/storylayout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Title:"/>
        <EditText android:textColor="@color/black" android:id="@+id/storytitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLength="20"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Description:"/>
        <EditText android:textColor="@color/black" android:id="@+id/storymemo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLength="20"/>
    </LinearLayout>
</LinearLayout>
